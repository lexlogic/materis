
  <div class="card-header text-uppercase text-muted">
    <div class="row">
      <div class="col-md-6">Task Name</div>
      <div class="col-md-4">Assignees</div>
      <div class="col-md-2">Due</div>
    </div>
  </div>
<% tasks.each do |task| %>
  <%= link_to tasks_path(task),:remote=>false do %>
    <div class="items-list">
      <div class="il-item">
          <div class="media">
            <div class="media-body">
              <div class="text-muted">
                <div class="row">
                  <div class="col-md-6">
                    <%= link_to task.name.capitalize, task_path(task) %>
                    <br>
                    <div class="date">
                      <b>Created By:</b> <%= task.user.name %>
                    </div>
                  </div>
                  <div class="col-md-4">
                    <% task.users.each_with_index do |u, i| %>
                        <%= link_to image_tag(u.image.icon, :class => 'rounded_pic pic20 '), user_path(u) %>
                    <% end %>
                  </div>

                  <div class="col-md-2">
                    <div class="date end-<%= (task.end_date <= 7.day.from_now && task.end_date >= Date.today) ? 'soon' : 'low' %>">
                      <%= task.time_to_end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
      </div>
    </div>
  <% end %>
<% end %>